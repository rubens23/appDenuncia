<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/altblack">

    <TextView
        android:id="@+id/comentario"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="comentario sobre a reclamacao"
        android:textColor="@color/white"
        android:fontFamily="@font/lato_regular"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/nome_user"
        android:layout_marginEnd="10dp"
        android:textSize="17sp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="10dp" />

    <TextView
        android:id="@+id/nome_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Rubens"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="3dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="16dp"
        />

    <TextView
        android:id="@+id/hora_comentario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="13/06/23 10:40"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@id/comentario"
        app:layout_constraintStart_toStartOf="@id/comentario"
        android:layout_marginTop="2dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/hora_comentario"
        android:background="@color/white"/>

</androidx.constraintlayout.widget.ConstraintLayout>