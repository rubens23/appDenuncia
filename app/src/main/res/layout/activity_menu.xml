<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background1"
    tools:context=".activities.MenuActivity">

    <ImageView
        android:id="@+id/logo_menu"
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:src="@drawable/logo6"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/btn_novas_reclamacoes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="70dp"
        android:elevation="1000dp"
        android:backgroundTint="@color/altblack"
        app:cardCornerRadius="4dp"
        android:layout_marginEnd="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">



            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/icone1"
                    android:layout_width="32dp"
                    android:layout_height="108dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="100dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:src="@color/verdeClaro" />



            <TextView
                android:id="@+id/lb_title_adicionar_reclamacoes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"
                app:layout_constraintStart_toEndOf="@id/icone1"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:text="@string/txt_add_reclamacoes"
                android:textColor="@color/verdeClaro"
                android:textSize="33sp" />

            </androidx.constraintlayout.widget.ConstraintLayout>


        </RelativeLayout>



    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/btn_minhas_reclamacoes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/altblack"
        app:cardCornerRadius="4dp"
        android:layout_marginEnd="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">



            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/icone2"
                    android:layout_width="32dp"
                    android:layout_height="108dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="100dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:src="@color/verdeClaro" />



                <TextView
                    android:id="@+id/lb_title_minhas_reclamacoes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="60dp"
                    app:layout_constraintStart_toEndOf="@id/icone2"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:text="@string/txt_minhas_reclamacoes"
                    android:textColor="@color/verdeClaro"
                    android:textSize="33sp" />

            </androidx.constraintlayout.widget.ConstraintLayout>


        </RelativeLayout>



    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/btn_reclamacoes_comunidade"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/altblack"
        app:cardCornerRadius="4dp"
        android:layout_marginEnd="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">



            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/icone3"
                    android:layout_width="32dp"
                    android:layout_height="108dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="100dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:src="@color/verdeClaro" />



                <TextView
                    android:id="@+id/lb_title_reclamacoes_comunidades"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="60dp"
                    app:layout_constraintStart_toEndOf="@id/icone3"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:text="@string/txt_reclamacoes_comunidade"
                    android:textColor="@color/verdeClaro"
                    android:textSize="33sp" />

            </androidx.constraintlayout.widget.ConstraintLayout>


        </RelativeLayout>




    </androidx.cardview.widget.CardView>

</LinearLayout>