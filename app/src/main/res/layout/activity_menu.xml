<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background1"
    tools:context=".MenuActivity">

    <ImageView
        android:id="@+id/logo_menu"
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:src="@drawable/logo6"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/btn_novas_reclamacoes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="70dp"
        android:elevation="1000dp"
        android:backgroundTint="@color/altblack"
        app:cardCornerRadius="4dp"
        android:layout_marginEnd="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/icone1"
                android:layout_width="108dp"
                android:layout_height="108dp"
                android:layout_marginStart="15dp"
                android:src="@drawable/loudspeaker" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/icone1"
                android:text="Adicionar \nReclamações"
                android:textColor="@color/verdeClaro"
                android:textSize="33sp" />


        </RelativeLayout>



    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/btn_minhas_reclamacoes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/altblack"
        app:cardCornerRadius="4dp"
        android:layout_marginEnd="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/icone2"
                android:layout_width="108dp"
                android:layout_height="108dp"
                android:layout_marginStart="15dp"
                android:src="@drawable/complaint" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/icone2"
                android:text="Minhas \nReclamações"
                android:textColor="@color/verdeClaro"
                android:textSize="33sp" />


        </RelativeLayout>



    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/btn_reclamacoes_comunidade"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/altblack"
        app:cardCornerRadius="4dp"
        android:layout_marginEnd="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/icone3"
                android:layout_width="108dp"
                android:layout_height="108dp"
                android:layout_marginStart="15dp"
                android:src="@drawable/conversation" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/icone3"
                android:text="Reclamações da\nComunidade"
                android:textColor="@color/verdeClaro"
                android:textSize="33sp" />


        </RelativeLayout>



    </androidx.cardview.widget.CardView>

</LinearLayout>