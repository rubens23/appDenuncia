<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/background1"
    tools:context=".activities.ActivityMinhasReclamacoes">

    <ImageView
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_arrow_back_24"
        android:padding="20dp"/>

    <TextView
        android:id="@+id/label_minhas_reclamacoes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/res_label_minhas_reclamacoes"
        android:textColor="@color/white"
        android:textSize="34sp"
        android:textAlignment="center"
        android:layout_marginTop="20dp"/>



        <androidx.recyclerview.widget.RecyclerView
            android:layout_marginTop="40dp"
            android:id="@+id/recycler_minhas_reclamacoes"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:listitem="@layout/item_minha_reclamacao"/>



</LinearLayout>